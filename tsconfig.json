{
  "compilerOptions": {
    "allowJs": false,
    "declaration": true,
    "esModuleInterop": true,
    "jsx": "react",
    "lib": ["es2017", "es7", "es6", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "outDir": "dist",
    "strict": true,
    "target": "es5"
  },
  "exclude": ["node_modules", "dist", "**/*.spec.*"],
  "includes": ["src"]
}
